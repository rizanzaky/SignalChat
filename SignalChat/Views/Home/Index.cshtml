@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<link href="~/Content/Styles/Main.css" rel="stylesheet" />
	<title>Signal Chat</title>
</head>
<body>
	<div>
		<div id="chat-window">
			<div class="message my-message">
				<b>Rizan</b><b class="message-time">02:30 am</b>
				<p>Hello World of Goo!</p>
			</div>
			<div class="message other-message">
				<b>Alex</b><b class="message-time">02:30 am</b>
				<p>Hello World of Torpedo!</p>
			</div>
		</div>

		<div id="writer-footer">
			<input id="message-text" class="send-input" type="text" name="writer" placeholder="Type your message..." spellcheck="true" lang="en" />
			<button id="message-send" class="send-button" type="button">Send</button>
		</div>
	</div>

	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
	<script src="~/Content/Scripts/Main.js"></script>
</body>
</html>
